{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "../**/*.ts",
    "../**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
